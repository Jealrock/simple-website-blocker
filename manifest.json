{
  "name": "Simple website blocker",
  "description": "The extension is really simple. You write a page you want to be able to access on every line of the input, other pages on this website will be blocked.",
  "version": "0.2",
  "permissions": ["storage", "tabs"],

  "icons": {
    "48": "icon.svg"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Simple website blocker",
    "default_popup": "main.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "main.html"
  },
  "web_accessible_resources": ["main.html"],

  "manifest_version": 2
}
